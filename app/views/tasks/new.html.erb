<!-- Validation failure messages -->
<% if @task.errors.any? %>
  <% @task.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Task</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_task" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" >
      </div>

      <!-- Label and input for deadline -->
      <div class="form-group">
        <label for="deadline" class="control-label">
          Deadline (include date and time)
        </label>

        <input type="datetime" id="deadline" name="deadline" placeholder="Deadline" class="form-control">
      </div>


      <!-- Label and input for status -->
      <div class="form-group">
      
        <input type="hidden" id="status" name="status" class="form-control" value="incomplete">
      </div>

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for category_id -->
      <div class="form-group">
        <label for="category_id" class="control-label">
          Category
        </label>

        <%= select_tag(:category_id, options_from_collection_for_select(Category.all.where(:user_id => current_user.id), :id, :name, @task.category_id), :class => "form-control") %>
        <a href="/categories/new">Add a new category</a>
      </div>

      <button class="btn btn-success">
        Create Task
      </button>
      or
      <a href="/task_edit_cancel">Cancel</a>
    </form>
  </div>
</div>
