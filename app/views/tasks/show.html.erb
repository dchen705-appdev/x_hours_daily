<div class="page-header">
  <h3>Task #<%= @task.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @task.name %></dd>

      <dt>Deadline</dt>
      <dd><%= @task.deadline %></dd>

      <dt>Status</dt>
      <dd><%= @task.status %></dd>

      <dt>User</dt>
      <dd>
        <% if @task.user.present? %>
          <a href="/users/<%= @task.user_id %>">
            <%= @task.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Category</dt>
      <dd>
        <% if @task.category.present? %>
          <a href="/categories/<%= @task.category_id %>">
            <%= @task.category.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/tasks" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @task.user %>
        <a href="/tasks/<%= @task.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_task/<%= @task.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
